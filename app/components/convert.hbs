<h2>Convert a file</h2>
<p>Select source file</p>
<label for="chooseFile">Choose file</label>
<Input
  @type="file"
  id="chooseFile"
  @value="Choose file"
  accept=".json,.mid,.xml"
  {{on "change" this.updateSourceFile}}
/>
{{#if this.sourceFile}}
  <p>You have selected
    {{this.sourceFile.name}}
    as your source file.</p>
{{/if}}
<p>Select target file format</p>
<label for="target">Select target file format:</label>
<PowerSelect
  @options={{this.targetFormats}}
  @selected={{this.targetFormat}}
  id="target"
  @onChange={{set this "targetFormat"}}
  as |targetFormat|
> {{targetFormat}} </PowerSelect>
<p>You have selected {{this.targetFormat}} as your target file format.</p>
<button
  type="button"
  disabled={{this.isConvertButtonDisabled}}
  {{on "click" this.convertFile}}
>Convert</button>
<button
  type="button"
  disabled={{this.isResetButtonDisabled}}
  {{on "click" this.reset}}
>Reset</button>
<div id="err">
</div>
<div id="err2">
</div>
{{#if this.convertedFile}}
<h2>Result of conversion</h2>
<label for="conversionResult">Result</label>
<textarea id="conversionResult" name="conversionResult" rows="4" cols="50">
{{this.conversionResult}}
</textarea>
<p>{{this.convertedFile.name}} is ready for download.</p>
  <a href={{this.convertedFileUrl}} download={{this.convertedFile.name}}>Download {{this.convertedFile.name}}</a>
{{/if}}